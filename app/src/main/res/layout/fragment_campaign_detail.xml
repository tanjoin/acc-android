<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragment_campaign_detail_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <TextView
            android:id="@+id/fragment_campaign_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="タイトル"
            />

    <TextView
            android:id="@+id/fragment_campaign_detail_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            tools:text="説明文"
            />

    <TextView
            android:id="@+id/fragment_campaign_detail_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/viewholder_main_label_background"
            android:padding="8dp"
            tools:text="ラベル"
            />

    <Button
            android:id="@+id/fragment_campaign_detail_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="完了"
            android:theme="@style/Widget.AppCompat.Button.Colored"
            />

</LinearLayout>